{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0be2609ba883822ec",
      "instance_type": "t3.medium",
      "ssh_username": "ec2-user",
      "ami_name": "packer {{timestamp}}",
      "tags": {
        "Name": "Packer-Ansible"
      }
    }
  ],

  "provisioners": [  
    {
      "type": "ansible",
      "playbook_file": "https://github.com/dev-sec/ansible-collection-hardening/blob/master/roles/os_hardening/defaults/main.yml"
    },
    {
     "type": "shell",
     "script": "./shell/inspector_agent_install.sh"
    },
    {
      "type": "inspec",
      "profile": "https://github.com/dev-sec/linux-baseline",
      "inspec_env_vars": [ "CHEF_LICENSE=accept"]
    },     
    {
      "type": "shell",
      "inline": ["rm .ssh/authorized_keys ; sudo rm /root/.ssh/authorized_keys"]
    }   
  ]
}
